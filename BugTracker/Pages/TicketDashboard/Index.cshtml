@page "Ticket"
@model BugTracker.Pages.TicketDashboard.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<div class="">
    <div class="row">

        @* FIRST COLUMN / OPEN TICKET *@
        <div class="col">
            <div id="OpenTicket" class="border rounded-top">
                <div class="card-header bg-warning">
                    <p class="font-weight-bold text-white m-0">Open Tickets</p>
                </div>
                <div class="card-body bg-light shadow-lg">
                    @foreach (var item in Model.Tickets)
                    {
                        @if(item.TicketActivity == 1)
                        {
                            <div class="card mx-2 my-3 p-4 shadow-sm">
                                <div>
                                    <label class="font-weight-bold">
                                        Ticket Title
                                    </label>
                                    <p class="text-secondary">
                                        @Html.DisplayFor(modelItem => item.TicketName)
                                    </p>
                                </div>
                                <div class="text-secondary d-flex align-items-center border-top pt-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="mr-2 bi bi-bug" viewBox="0 0 16 16">
                                        <path d="M4.355.522a.5.5 0 0 1 .623.333l.291.956A4.979 4.979 0 0 1 8 1c1.007 0 1.946.298 2.731.811l.29-.956a.5.5 0 1 1 .957.29l-.41 1.352A4.985 4.985 0 0 1 13 6h.5a.5.5 0 0 0 .5-.5V5a.5.5 0 0 1 1 0v.5A1.5 1.5 0 0 1 13.5 7H13v1h1.5a.5.5 0 0 1 0 1H13v1h.5a1.5 1.5 0 0 1 1.5 1.5v.5a.5.5 0 1 1-1 0v-.5a.5.5 0 0 0-.5-.5H13a5 5 0 0 1-10 0h-.5a.5.5 0 0 0-.5.5v.5a.5.5 0 1 1-1 0v-.5A1.5 1.5 0 0 1 2.5 10H3V9H1.5a.5.5 0 0 1 0-1H3V7h-.5A1.5 1.5 0 0 1 1 5.5V5a.5.5 0 0 1 1 0v.5a.5.5 0 0 0 .5.5H3c0-1.364.547-2.601 1.432-3.503l-.41-1.352a.5.5 0 0 1 .333-.623zM4 7v4a4 4 0 0 0 3.5 3.97V7H4zm4.5 0v7.97A4 4 0 0 0 12 11V7H8.5zM12 6a3.989 3.989 0 0 0-1.334-2.982A3.983 3.983 0 0 0 8 2a3.983 3.983 0 0 0-2.667 1.018A3.989 3.989 0 0 0 4 6h8z" />
                                    </svg>
                                    @Html.DisplayFor(modelItem => item.TicketCategory)
                                </div>

                                <div class="text-secondary">
                                    <label>
                                        Assigned to
                                    </label>
                                    <span>
                                        @Html.DisplayFor(modelItem => item.TicketOwner)
                                    </span>
                                </div>
                                <div>
                                    <form method="POST">
                                        <input type="hidden" asp-for="TicketActivity" value="2" />
                                        <input type="hidden" asp-for="TicketID" value="@item.ID" />
                                        <button type="submit">In Progress</button>
                                    </form>
                                    <input class="btn btn-sm btn-warning font-weight-bold text-white shadow-sm" type="submit" @*onclick="AddInProgress(@item.ID)"*@ value="In Progress" />
                                </div>
                                <div>
                                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>
        </div>

        @* SECOND COLUMN / IN PROGRESS *@
        <div class="col">
            <div id="InProgress" class="border rounded-top">
                <div class="card-header bg-info">
                    <p class="font-weight-bold text-white m-0">In Progress</p>
                </div>
                <div class="card-body bg-light">
